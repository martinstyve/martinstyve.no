---
import Header from "./Header.astro";
import Footer from "./Footer.astro";
import Analytics from "@vercel/analytics/astro";
import Snowfall from "react-snowfall";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!-- <script>
    // add script here
</script> -->

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/skywalker_snow.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- env insertion point is where Environment variables for the docker image will be inserted -->
    <noscript id="env-insertion-point"></noscript>

    <!-- Snowfall effect for christmas -->
    <Snowfall
      client:load
      color="#82C3D9"
      snowflakeCount={200}
      style={{
        position: "fixed",
        width: "100vw",
        height: "100vh",
        zIndex: -1 /* Keeps the snow behind your text and buttons */,
      }}
    />

    <Header />
    <main>
      <slot />
    </main>
    <Footer />
    <Analytics />
  </body>
</html>

<style is:global>
  html {
    font-family: "Poppins", sans-serif;
    background: #1c1d23;
    height: 100%;
  }

  body {
    margin: 0;
    padding: 0;
    font-weight: 400;
    color: #f1f1f1;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  main {
    text-align: center;
    padding: 0 2rem;
    flex: 1;
  }

  footer {
    flex-shrink: 0;
  }
</style>
