---
import Header from "./Header.astro";
import Footer from "./Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/x-icon" href="/skywalker_snow.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Google tag (gtag.js) -->
    <script is:inline src="https://www.googletagmanager.com/gtag/js?id=G-WFNQ4CEXY1"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-WFNQ4CEXY1');
    </script>
  </head>
  <body>
    <!-- env insertion point is where Environment variables for the docker image will be inserted -->
    <noscript id="env-insertion-point"></noscript>

    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  html {
    font-family: "Poppins", sans-serif;
    background: #1c1d23;
  }
  body {
    margin: 0;
    padding: 0;
    font-weight: 400;
    color: #f1f1f1;
  }
  main {
    text-align: center;
    padding: 0 2rem;
  }
</style>
